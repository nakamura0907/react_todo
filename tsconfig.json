{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "es2015",
        "jsx": "react",
        "moduleResolution": "node",
        "lib": [
            "es2020",
            "dom"
        ],
        "baseUrl": "./",
        "paths": {
            "@atom/*": ["src/components/atoms/*"],
            "@component/*": ["src/components/*"],
            "@container/*": ["src/containers/*"],
            "@module/*": ["src/modules/*"],
            "@utils/*": ["src/utils/*"],
        }
    }
}
